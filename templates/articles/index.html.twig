{% extends 'base.html.twig' %}

{% block title %}SymphArt Articles{% endblock %}

{% block body %}
    <h1>Articles</h1>
    
  
        <div class="row col-lg-12">
                <table id="articles" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>SN</th>
                            <th>Article Title</th>
                            <th>Article Body</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in articles %}
                            <tr>
                                <td>{{ loop. index }} </td>
                                <td>{{ article.title }} </td>
                                <td>{{ article.body }} </td>
                                <td>
                                    <a href="article/{{ article.id }} " class="btn btn-outline-dark mr-3">Show</a>
                                    <a href="article/{{ article.id }}/edit " class="btn btn-outline-primary mx-3">Edit</a>
                                    <a href="#" class="btn btn-outline-danger delete-article" data-id="{{ article.id }} ">Delete</a>
                                </td>
                            </tr>
                            {% else %}
                                <p>No Articles</p>
                        {% endfor %}
                    </tbody>
                </table>
        </div>
        

{% endblock %}

{% block javascripts %}
    <script src="js/main.js"></script>
{% endblock %}